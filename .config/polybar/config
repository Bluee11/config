### Bar
[bar/BlueeBar]
monitor      = ${env:MONITOR:}
width        = 100%
height       = 25
;offset-x    = 1%
;offset-y    = 1%
radius       = 0
fixed-center = true
bottom       = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size  = 2
line-color = #f00

border-size  = 0
border-color = #00000000

padding-left  = 2
padding-right = 2

module-margin-left  = 1
module-margin-right = 2

font-0 = Liberation Mono:pixelsize=10;1
font-1 = Font Awesome 5 Free:pixelsize=14;3
font-2 = Font Awesome 5 Free Solid:pixelsize=14;3
font-3 = Font Awesome 5 Brands:pixelsize=14;3

modules-left   = memory cpu temperature
modules-center = i3 
modules-right  = pulseaudio date powermenu

tray-position    = ${env:TRAY_POSITION:right}
tray-padding     = 2

cursor-click  = pointer
cursor-scroll = ns-resize

### Modules

[module/memory]
type                     = internal/memory
interval                 = 2
format-prefix            = "ÓÄ® "
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = #009F6B
label                    = Mem %percentage_used%%

[module/cpu]
type                     = internal/cpu
interval                 = 2
format-prefix            = "ÓÄ¶ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = #C40233
label                    = CPU %percentage:2%%

[module/temperature]
type             = internal/temperature
thermal-zone     = 0
warn-temperature = 60

format                =CPU <ramp> <label>
format-underline      = #9A4EAE
format-warn-underline = ${self.format-underline}

ramp-0          = ÓÉâ
ramp-1          = ÓÉä
ramp-2          = ÓÉã
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu
expand-right = true

format-spacing = 2

label-open                 = "ÔÄì"
label-open-foreground      = ${colors.secondary}
label-close                = " ÔÄç"
label-close-foreground     = ${colors.secondary}
label-seperator            = |
label-seperator-foreground = ${colors.foreground-alt}

menu-0-0      = "ÔÄû "
menu-0-0-exec = menu-open-1
menu-0-1      = "ÔÄë "
menu-0-1-exec = menu-open-2
menu-0-2      = "ÔÄá"
menu-0-2-exec = menu-open-3

menu-1-0      = "ÔÄå "
menu-1-0-exec = reboot     
menu-1-1      = "ÔÄç"
menu-1-1-exec = menu-open-0

menu-2-0      = "ÔÄå "
menu-2-0-exec = shutdown now
menu-2-1      = "ÔÄç"
menu 2-1-exec = menu-open-0

menu-3-0      = "ÔÄå "
menu-3-0-exec = i3-msg exit
menu-3-1      = "ÔÄç"
menu-3-1-exec = menu-open-0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

strip-wsnumbers = true

[module/pulseaudio]
type = internal/pulseaudio

format-volume           = <label-volume> <bar-volume>
label-volume            = VOL %percentage%
label-volume-foreground = ${root.foreground

label-muted            = üîá muted
label-muted-foreground = #666

bar-volume-width            = 10
bar-volume-foreground-0     = #55aa55
bar-volume-foreground-1     = #55aa55
bar-volume-foreground-2     = #55aa55
bar-volume-foreground-3     = #55aa55
bar-volume-foreground-4     = #55aa55
bar-volume-foreground-5     = #f5a70a
bar-volume-foreground-6     = #ff5555
bar-volume-gradient         = false
bar-volume-indicator        = |
bar-volume-indicator-font   = 2
bar-volume-fill             = ‚îÄ
bar-volume-fill-font        = 2
bar-volume-empty            = ‚îÄ
bar-volume-empty-font       = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/date]
type     = internal/date
interval = 1

date     = %a:%F
date-alt = "%Y-%m-%d"

time     = %r
time-alt = %H:%M:%S

format-prefix            = ÓÄñ
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = #007FFF

label = %date% ÔÄó %time%

