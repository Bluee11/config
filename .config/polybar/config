### Bar
[bar/info]
monitor      = ${env:MONITOR:}
width        = 1880  
height       = 25
offset-x    = 20
offset-y    = 5 
radius       = 0
fixed-center = true
bottom       = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size  = 2
line-color = #f00

border-size  = 0
border-color = #00000000

padding-left  = 2
padding-right = 2

module-margin-left  = 1
module-margin-right = 2

font-0 = Liberation Mono:pixelsize=10;1
font-1 = Font Awesome 5 Free:pixelsize=14;3
font-2 = Font Awesome 5 Free Solid:pixelsize=14;3
font-3 = Font Awesome 5 Brands:pixelsize=14;3

modules-left   = memory cpu temperature
modules-center = i3 
modules-right  = mpd pulseaudio date powermenu

tray-position    = ${env:TRAY_POSITION:right}
tray-padding     = 2

cursor-click  = pointer
cursor-scroll = ns-resize

wm-restack = i3
override-redirect = true

### Modules

[module/memory]
type                     = internal/memory
interval                 = 2
format-prefix            = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = #009F6B
label                    = Mem %percentage_used%%

[module/cpu]
type                     = internal/cpu
interval                 = 2
format-prefix            = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = #C40233
label                    = CPU %percentage:2%%

[module/temperature]
type             = internal/temperature
thermal-zone     = 0
warn-temperature = 60

format                =CPU <label>
format-underline      = #9A4EAE
format-warn-underline = ${self.format-underline}

ramp-0          = 
ramp-1          = 
ramp-2          = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu
expand-right = true

format-spacing = 2

label-open                 = ""
label-open-foreground      = ${colors.green}
label-close                = " "
label-close-foreground     = ${colors.green}
label-seperator            = |
label-seperator-foreground = ${colors.foreground-alt}

menu-0-0      = " "
menu-0-0-exec = menu-open-1
menu-0-1      = " "
menu-0-1-exec = menu-open-2
menu-0-2      = ""
menu-0-2-exec = menu-open-3

menu-1-0      = " "
menu-1-0-exec = reboot     
menu-1-1      = ""
menu-1-1-exec = menu-open-0

menu-2-0      = " "
menu-2-0-exec = shutdown now
menu-2-1      = ""
menu 2-1-exec = menu-open-0

menu-3-0      = " "
menu-3-0-exec = i3-msg exit
menu-3-1      = ""
menu-3-1-exec = menu-open-0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
pin-workspaces = true
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.blue}

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.blue}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

strip-wsnumbers = true
[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false

interval = 5

format-volume = <ramp-volume> <label-volume>

label-muted =  muted
label-muted-foreground = #666

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

click-right = pavucontrol &

[module/date]
type     = internal/date
interval = 1

date     = %a:%F
date-alt = "%Y-%m-%d"

time  r  = %r
time-alt = %H:%M:%S

format-prefix            = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = ${colors.blue-alt}

label = %date%  %time%

